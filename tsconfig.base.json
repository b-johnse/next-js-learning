{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@next-js-learning/source"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@local/shadcnui": ["libs/shadcn/src/index.ts"],
      "@local/shadcnui/*": ["libs/shadcn/src/*"],
      "@local/auth": ["libs/auth/src/index.ts"],
      "@local/auth/client": ["libs/auth/src/client.ts"],
      "@local/auth/*": ["libs/auth/src/*"]
    }
  }
}
